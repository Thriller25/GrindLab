# =============================================================================
# GrindLab — Environment Variables Example
# =============================================================================
# Copy this file to .env and fill in the values
# Last updated: 2025-12-23

# =============================================================================
# DATABASE
# =============================================================================
# SQLite for development (default)
DB_URL=sqlite:///./grindlab.db

# PostgreSQL for production (uncomment and configure)
# DB_URL=postgresql://user:password@localhost:5432/grindlab

# =============================================================================
# APPLICATION
# =============================================================================
# Enable debug mode (set to false in production)
APP_DEBUG=true

# =============================================================================
# SECURITY
# =============================================================================
# JWT Secret Key (CHANGE THIS IN PRODUCTION!)
# Generate with: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=your-super-secret-key-change-in-production

# JWT Token expiration (minutes)
ACCESS_TOKEN_EXPIRE_MINUTES=30

# =============================================================================
# AUTHENTICATION
# =============================================================================
# Set to "true" to enable authentication (recommended for production)
# Set to "false" for development without auth
AUTH_ENABLED=false

# =============================================================================
# CORS
# =============================================================================
# Comma-separated list of allowed origins
ALLOWED_ORIGINS=http://localhost:5173,http://127.0.0.1:5173

# =============================================================================
# RATE LIMITING
# =============================================================================
# Default rate limit (requests per minute)
# RATE_LIMIT_DEFAULT=100/minute

# Rate limit for calculation endpoints
# RATE_LIMIT_CALC=10/minute

# =============================================================================
# LOGGING
# =============================================================================
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# =============================================================================
# EXTERNAL INTEGRATIONS (Future)
# =============================================================================
# INKA/Data Hub API (for historical data)
# INKA_API_URL=https://inka.example.com/api
# INKA_API_KEY=your-inka-api-key

# =============================================================================
# CALC SERVICE (Future - separate microservice)
# =============================================================================
# CALC_SERVICE_URL=http://localhost:8001
# CALC_SERVICE_TIMEOUT=30
